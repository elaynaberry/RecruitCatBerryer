@page
@model RecruitCatBerryer.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanySize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanySize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyAge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyAge)
        </dd>
    </dl>
</div>
@if (Model.Company.Candidates.Any())
{
    <div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].JobTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].Industry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].YearsInSchool)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].StateOfResidency)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Company.Candidates)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobTitle.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Industry.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearsInSchool)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StateOfResidency)
                    </td>
                    <td>
                        <a asp-page="/Company/Details" asp-route-id="@item.CompanyId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        </div>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
